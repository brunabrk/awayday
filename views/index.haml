- if flash[:notice]
  %p.notice= flash[:notice]

%form{:action => '/talk', :method => "POST"}
  %label{:for=>'name'} Name
  %input#name{:type=>'text', :name=> 'name'}
  %label{:for=>'talk_title'} Talk Title
  %input#talk_title{:type=>'text', :name=> 'talk_title'}
  %label{:for=>'subject'} Subject
  %input#subject{:type=>'text', :name=> 'subject'}
  %label{:for=>'category'} Category
  %input#category{:type=>'text', :name=> 'category'}
  %label{:for=>'duration'} Duration
  #duration
    %input#45mins{:type=>"radio", :name=>"duration", :value=>"45"}
      %span 45mins
    %input#90mins{:type=>"radio", :name=>"duration", :value=>"90"}
      %span 90mins
  %input.green.button{:type=>'submit', :value=> 'Submit'}
