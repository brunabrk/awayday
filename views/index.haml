%form{:action => '/talk', :method => "POST"}
  %label{:for=>'name'} Name
  %input#name{:type=>'text', :name=> 'name', :placeholder => "Enter your name"}
  %label{:for=>'email'} Email
  %input#email{:type=>'email', :name=> 'email', :placeholder => "Enter your email"}
  %label{:for=>'title'} Title
  %input#title{:type=>'text', :name=> 'title', :placeholder => "Enter the title of your proposal"}
  %label{:for=>'summary'} Summary
  %textarea#summary{:name=> 'summary', :placeholder => "Enter the summary of your presentation."}
  %label{:for=>'category'} Category
  %select#category{:name => "category"}
    - @categories.each do |category|
      %option #{category}
  %label{:for=>'duration'} Duration
  #duration
    - @durations.each do |type, duration|
      %input{:id=>"#{duration}mins", :type=>"radio", :name=>"duration", :value=>"#{duration}"}
      %label{:for=>"#{duration}mins"} #{type.capitalize} (#{duration}mins)
  %input.green.button{:type=>'submit', :value=> 'Submit'}

