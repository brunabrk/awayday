- if flash[:notice]
  %p.notice= flash[:notice]

%form{:action => '/talk', :method => "POST"}
  %label{:for=>'name'} Name
  %input#name{:type=>'text', :name=> 'name'}
  %label{:for=>'title'} Title
  %input#title{:type=>'text', :name=> 'title'}
  %label{:for=>'summary'} Summary
  %textarea#summary{:name=> 'summary'}
  %label{:for=>'category'} Category
  %select#category{:name => "category"}
    - @categories.each do |category|
      %option #{category}
  %label{:for=>'duration'} Duration
  #duration
    - @durations.each do |type, duration|
      %input{:id=>"#{duration}mins", :type=>"radio", :name=>"duration", :value=>"#{duration}"}
      %label{:for=>"#{duration}mins"} #{type.capitalize} (#{duration}mins)
  %input.green.button{:type=>'submit', :value=> 'Submit'}

